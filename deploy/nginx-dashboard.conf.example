# Next.js dashboard (Node on port 3008) â€“ save as /etc/nginx/sites-available/findx-dashboard
# Enable: sudo ln -s /etc/nginx/sites-available/findx-dashboard /etc/nginx/sites-enabled/
# Replace dashboard.yourdomain.com with your dashboard domain

server {
    listen 80;
    server_name dashboard.yourdomain.com;

    location / {
        proxy_pass http://127.0.0.1:3008;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
}
